<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.stijn.myfirstapplication.MainActivity1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi there!"
        android:textColor="#040303"
        android:textSize="20dp"
        android:id="@+id/hiView"
        android:layout_marginLeft="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Choose your play!"
        android:textColor="#040303"
        android:textSize="20dp"
        android:id="@+id/choiceView"
        android:layout_below="@+id/hiView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock"
        android:id="@+id/rockButton"
        android:layout_below="@+id/choiceView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paper"
        android:id="@+id/paperButton"
        android:layout_below="@+id/rockButton"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scissors"
        android:id="@+id/scissorButton"
        android:layout_below="@+id/paperButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:textSize="30dp"
        android:id="@+id/scoreView"
        android:layout_below="@+id/outcome"
        android:layout_marginLeft="135dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You:"
        android:textSize="30dp"
        android:id="@+id/userScore"
        android:layout_below="@+id/scoreView"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It:"
        android:textSize="30dp"
        android:id="@+id/mobileScore"
        android:layout_below="@+id/scoreView"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It"
        android:textSize="30dp"
        android:id="@+id/itPlay"
        android:layout_below="@id/rockButton"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outcome"
        android:textSize="30dp"
        android:id="@+id/outcome"
        android:layout_below="@id/scissorButton"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"/>
</RelativeLayout>
